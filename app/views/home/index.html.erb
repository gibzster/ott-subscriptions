<%= form_tag root_path, method: :get do %>
  <div class="input-group mb-3 row justify-content-end" id="#searching">
    <%= text_field_tag :query, "" , :class => "form-control col-2 no-border"%>
    <div class="input-group-append rounded-right" style="background: white">
  <span class="input-group" id="#x">
    <img src="/assets/search-mono.svg" alt="?" style="width: 20px; margin-right: 10px; background: white; height: 30px;"/>
<!--    <button style="background: url(/assets/search-mono.svg)"; background-repeat: no-repeat; />-->
<!--    <button class="btn btn-primary"><img src="/assets/search-mono.svg"></button>-->
  </span>
    </div>
<% end %>

</div>
<div class="table-responsive d-none d-lg-flex flex-column">
  <table class="table table-hover">
    <thead>
    <tr>
      <th >Customer</th>
      <th >Product</th>
      <th >PAGE</th>
    </tr>
    </thead>
    <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td ><%= subscription.customer.email %></td>
        <td ><%= subscription.product.name %></td>
        <td ><%=time_ago_in_words(subscription.subscribed_at)%> ago</td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @subscriptions %>
</div>


